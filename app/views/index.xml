    <Alloy>
    <Window class="container" layout="vertical" backgroundColor="#EEEEEE">
         <View layout="vertical" top="20" backgroundColor="#FFFFFF" height="225" width="95%" borderRadius="5">
            <View layout="vertical" top="10" left="10" right="10" bottom="10">
                <Label id="projectTitle" color="#212121" left="0">Event Management webapp</Label>
                <Label color="#656565" id="projectDeadline" left="0">12/11/2015</Label>
                <TextField id="title" hintText="Project Title" color="#212121" hintTextColor="#D9D9D9" top="10" left="0"/>
                <TextField id="deadline" hintText="Project Deadline" color="#212121" hintTextColor="#D9D9D9" left="0" />
                <Button top="10" onClick="doClick">Update</Button>
        </View>
        </View>
        <View layout="vertical" top="10" backgroundColor="#FFFFFF" height="290" width="95%" borderRadius="5">
            <View layout="vertical" top="10" left="10" right="10" bottom="10" onDblclick="edit">
                <Label id="projectTitle2" color="#212121" left="0">Event Management webapp</Label>
                <Label color="#656565" id="projectDeadline2" left="0">12/11/2015</Label>
                <Label color="#656565" id="projectTasks2" left="0">Tasks</Label>
                <TextField id="title2" hintText="Project Title" color="#212121" hintTextColor="#D9D9D9" top="10" left="0" width="100%" />
                <TextField id="deadline2" hintText="Project Deadline" color="#212121" hintTextColor="#D9D9D9" left="0" width="100%" />
                <TextField id="tasks2" hintText="Project Tasks" color="#212121" hintTextColor="#D9D9D9" left="0" width="100%" />
                <Button top="10" onClick="update">Update</Button>
        </View>
        </View>
    </Window>
    </Alloy>