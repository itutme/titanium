<Alloy>
	<Collection src="projects"/>
	<Window>
	    <Toolbar platform="ios" class="top-20" borderTop="true" borderBottom="true">
	        <Items>
	            <FlexSpace/>
	            <Label id="windowTitle">Project Management</Label>
	            <FlexSpace/>
	        </Items>
	    </Toolbar>    
	    <TableView id="table" filterAttribute="filter" dataCollection="projects">
	        <SearchBar />
	    <TableViewRow filter="{name}">
	        <View class="container">
	        <View class="inner-container">
	            <Label id="projectTitle" class="left-0 title" text="{name}" />
	            <Label id="projectTasks" class="left-0 color-secondary content top-5" text="{description}" />
	            <Label id="projectTasks" class="left-0 color-primary content top-5" text="{assigned_to}" />
	                <View class="height-size width-size lo-horizontal right-0 top-10">
	                <Label class="info width-size color-light">=</Label>
	                <Label id="taskCount" class="info width-size color-highlight" text="{task_count}" />
	                <Label class="info width-size color-light left-10">||</Label>
	                <Label id="projectDeadline" class="width-size info color-highlight" text="{end_dt}" />
	            </View>
	    </View>
	    </View>
	    </TableViewRow>
	    </TableView>
	</Window>
</Alloy>