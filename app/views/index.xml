<Alloy>
	<Collection src="projects"/>
<Window>
    <Toolbar platform="ios" class="top-20" borderTop="true" borderBottom="true">
        <Items>
            <FlexSpace/>
            <Label id="windowTitle">Project Management</Label>
            <FlexSpace/>
        </Items>
    </Toolbar>
    
    <TableView id="table" filterAttribute="filter" dataCollection="projects">
        <SearchBar />
    <TableViewRow filter="Event Management webapp">
        <View class="container">
        <View class="inner-container">
            <Label id="projectTitle" class="left-0 title" text="{name}" />
	        <Label id="projectTasks" class="left-0 color-secondary content top-5" text="{description}" />
            <View class="height-size width-size lo-horizontal right-0 top-10">
                <Label class="mi content width-size color-light">group</Label>
                <Label id="taskCount" class="width-size info left-5 color-highlight" text="{assigned_to}" />
                <Label class="mi width-size color-light left-10">access_time</Label>
                <Label id="projectDeadline" class="width-size info left-5 color-highlight" text="{end_dt}" />
            </View>
    </View>
    </View>
    </TableViewRow>
    </TableView>
</Window>
</Alloy>